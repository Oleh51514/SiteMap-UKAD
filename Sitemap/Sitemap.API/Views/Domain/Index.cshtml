@{
    ViewBag.Title = "Main page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        
        <section id="loginForm">

            @using (Ajax.BeginForm("GetDomain", "Domain", new AjaxOptions { LoadingElementId = "divLoading", LoadingElementDuration = 200 }))
            {
                <h4>Page with textbox, where user can enter URL.</h4>
                <hr />
                <div class="row">
                    <div class="col-lg-10">
                        <div class="input-group">
                            <input type="url" name="domain" placeholder="Input domain url here..." style="max-width:none" class="form-control">
                            <span class="input-group-btn">
                                <button class="btn btn-success" type="submit">Send domain url !</button>
                            </span>
                        </div>
                    </div>
                </div>
            }
            <br />
            <div class="progress progress-striped active" id="divLoading" style="display:none">
                <div class="progress-bar" style="width: 100%;">data loading...</div>
            </div>
            

        </section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            <h4>Configuration:</h4>
            <hr />
            <div>
                <p> 1). Depthof urls search: Unlimited </p>
                <p> 2). Number of requests: 3 </p>
            </div>
        </section>
    </div>
</div>








